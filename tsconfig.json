{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["powerapps-component-framework"],
    "outDir": "./out"
  },
  "include": [
    "index.ts",
    "generated/**/*.d.ts",
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
}
