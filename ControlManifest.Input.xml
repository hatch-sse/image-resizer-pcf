<manifest xmlns="http://schemas.microsoft.com/PowerApps/2016/ControlManifest">
  <control
    namespace="Hatch.ImageResizer"
    constructor="ImageResizerPCF"
    version="1.0.0"
    display-name-key="Image Resizer"
    description-key="Resizes and crops images to presets or custom sizes"
    control-type="standard">

    <resources>
      <code path="src/index.ts" order="1" />
      <css  path="css/Control.css" order="1" />
    </resources>

    <!-- Outputs (note: use of-type, not type) -->
    <property name="DataUri"   display-name-key="Data URI"     description-key="Exported image as Data URI" type-group="SingleLine.Text" of-type="SingleLine.Text" usage="output" required="false" />
    <property name="OutWidth"  display-name-key="Output Width" description-key="Width of resized image"      of-type="Whole.None"        usage="output" required="false" />
    <property name="OutHeight" display-name-key="Output Height" description-key="Height of resized image"    of-type="Whole.None"        usage="output" required="false" />
    <property name="FileName"  display-name-key="File Name"    description-key="Suggested file name"         of-type="SingleLine.Text"   usage="output" required="false" />

  </control>
</manifest>
