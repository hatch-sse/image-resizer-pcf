<manifest xmlns="http://schemas.microsoft.com/PowerApps/2016/ControlManifest">
  <control
    namespace="Hatch.ImageResizer"
    constructor="ImageResizerPCF"
    version="1.0.0"
    control-type="standard">

    <!-- These are ELEMENTS, not attributes -->
    <display-name-key>Control_DisplayName</display-name-key>
    <description-key>Control_Description</description-key>

    <resources>
      <!-- point to your actual files at repo root -->
      <code path="index.ts" order="1" />
      <css  path="Control.css" order="1" />
      <resx path="strings/ControlManifest.resx" version="1.0.0" />
    </resources>

    <!-- Outputs -->
    <property name="DataUri" of-type="SingleLine.Text" usage="output" required="false">
      <display-name-key>Prop_DataUri_DisplayName</display-name-key>
    </property>

    <property name="OutWidth" of-type="Whole.None" usage="output" required="false">
      <display-name-key>Prop_OutWidth_DisplayName</display-name-key>
    </property>

    <property name="OutHeight" of-type="Whole.None" usage="output" required="false">
      <display-name-key>Prop_OutHeight_DisplayName</display-name-key>
    </property>

    <property name="FileName" of-type="SingleLine.Text" usage="output" required="false">
      <display-name-key>Prop_FileName_DisplayName</display-name-key>
    </property>

  </control>
</manifest>
