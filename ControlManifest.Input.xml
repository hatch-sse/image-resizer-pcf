<manifest>
  <control
    namespace="Hatch.ImageResizer"
    constructor="ImageResizerPCF"
    version="1.0.0"
    control-type="standard"
    display-name-key="Control_DisplayName"
    description-key="Control_Description">

    <resources>
      <code path="index.ts" order="1" />
      <css  path="Control.css" order="1" />
      <resx path="strings/ControlManifest.resx" version="1.0.0" />
    </resources>

    <property name="DataUri"   display-name-key="Prop_DataUri_DisplayName"   of-type="SingleLine.Text" usage="output" required="false" />
    <property name="OutWidth"  display-name-key="Prop_OutWidth_DisplayName"  of-type="Whole.None"      usage="output" required="false" />
    <property name="OutHeight" display-name-key="Prop_OutHeight_DisplayName" of-type="Whole.None"      usage="output" required="false" />
    <property name="FileName"  display-name-key="Prop_FileName_DisplayName"  of-type="SingleLine.Text" usage="output" required="false" />

  </control>
</manifest>
